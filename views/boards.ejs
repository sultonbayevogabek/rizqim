<%
const trimText = text => {
    if (text.length > 25) {
        return text.substring(0, 25) + ' ...'
    }
    return text
}
%>
<%- include('parts/header') %>
<!--BOARDS PAGE-->
<header class="header header-boards">
    <%- include('components/navbar', { logo: 'white' }) %>

    <div class="container">
        <h1 class="header__title">
            <span>Rizqingizni</span>
            <br>
            <span>hallolab oling</span>
        </h1>
    </div>
</header>
<main class="main">
    <div class="board-list">
        <div class="grid-container">
            <% for (let board of boards) { %>
                <div class="card" title="<%= board.title %>" style="background-image: url(<%= board.img_url %>)">
                    <div class="card__body">
                        <h3 class="card__heading"><%= trimText(board.title)%></h3>
                        <div class="card__statistic">
                            <div class="card__workers">
                                <span><%= board.applicants.length %></span>
                                <img src="/img/icons/workers.svg" alt="">
                            </div>
                        </div>
                    </div>
                    <a class="card__link" href="/boards/<%= board.id %>">
                        card link
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</main>
<%- include('components/footer') %>
<%- include('parts/footer') %>