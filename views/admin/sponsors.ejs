<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <title>Homiylar</title>
</head>
<body>


<div class="admin">
    <%- include('sidebar') %>
    <main class="admin__main">
        <h2 class="h5 mb-3">Homiy qo'shish</h2>
        <form class="row mb-5" id="create-sponsor">
            <label class="col-6 mb-3">
                <span class="mb-1 text-muted">Homiyning veb manzili</span>
                <input class="form-control" type="url" placeholder="Loyihaning nomini kiriting" data-sponsor-url value="https://.uz" required>
            </label>
            <label class="col-6 mb-3">
                <span class="mb-1 text-muted">Homiyning logosi</span>
                <input class="form-control" type="file" accept=".png, .jpg" data-sponsor-logo required>
            </label>
            <div class="col-12">
                <button class="btn btn-primary w-100">Homiy qo'shish</button>
            </div>
        </form>

        <h2 class="h5 mb-3">Homiylar ro'yxati</h2>
        <table class="table table-bordered bg-white">
            <thead>
            <tr>
                <th>Homiyning veb manzili</th>
                <th>Homiyning logosi</th>
                <th>Olib tashlash</th>
            </tr>
            </thead>
            <tbody class="border-top-0">
            <% for (let sponsor of sponsors) { %>
                <tr>
                    <td><a target="_blank" href="<%= sponsor.link%>"><%= sponsor.link%></a></td>
                    <td><img style="width: 100px" src="<%= sponsor.logo %>"></td>
                    <td>
                        <a class="btn btn-danger" href="/admin/delete-sponsor/<%= sponsor.id%>">O'chirish</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </main>
</div>

<script src="/js/bundle.js"></script>
</body>
</html>