<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <title>Tugallangan loyihalar</title>
</head>
<body>


<div class="admin">
    <%- include('sidebar') %>
    <main class="admin__main">
        <h2 class="h5 mb-3">Tugallangan loyihalar</h2>
        <table class="table table-bordered bg-white">
            <thead>
            <tr>
                <th>Loyiha nomi</th>
                <th>Loyiha linki</th>
                <th>Loyiha tugallangan sana</th>
                <th>Frilanser</th>
                <th>O'chirish</th>
            </tr>
            </thead>
            <tbody class="border-top-0">
            <% for (let board of boards) { %>
                <tr>
                    <td>
                        <a target="_blank" href="/completed/<%= board.id %>"><%= board.title %></a>
                    </td>
                    <td>
                        <a target="_blank" href="<%= board.project_link %>"><%= board.project_link %></a>
                    </td>
                    <td>
                        <%= board.updatedAt.getFullYear() %> - <%= board.updatedAt.getMonth() %> - <%= board.updatedAt.getDate() %>
                    </td>
                    <td>
                        <a target="_blank" href="/freelancers/<%= board.freelancer_id %>"><%= board.freelancer_id %></a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/admin/delete-board/<%= board.id %>">Delete</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </main>
</div>

<script src="/js/bundle.js"></script>
</body>
</html>